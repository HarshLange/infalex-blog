---
import "../styles/global.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-162KWK3Q3L"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-162KWK3Q3L");
    </script>

    <style is:global>
      /* Vercel Style: Single font family, tight tracking */
      body { 
        font-family: 'Inter', sans-serif; 
        /* This is the key to the Vercel look: */
        letter-spacing: -0.015em; 
      }
      
      h1, h2, h3, h4, h5, h6 { 
        font-family: 'Inter', sans-serif;
        letter-spacing: -0.035em; /* Tighter headings */
      }
    </style>
  </head>

  <body class="bg-white text-slate-900 antialiased flex flex-col min-h-screen selection:bg-blue-100 selection:text-blue-900">
    
    <header class="sticky top-0 z-50 w-full border-b border-gray-100 bg-white/80 backdrop-blur-md">
        <div class="max-w-5xl mx-auto px-6 h-16 flex items-center justify-between">
            <a href="/" class="text-lg font-bold text-slate-950 flex items-center gap-2">
                <span class="h-6 w-6 bg-blue-700 text-white rounded flex items-center justify-center text-sm font-bold">I</span> Infalex
            </a>
            <nav class="hidden md:flex gap-6 text-sm font-medium text-gray-500">
                <a href="/blog" class="hover:text-black transition">Blog</a>
                <a href="https://infalex.com" class="hover:text-black transition">Projects</a>
                <a href="/about" class="hover:text-black transition">About</a>
            </nav>
        </div>
    </header>

    <main class="grow">
      <slot />
    </main>

    <footer class="bg-white border-t border-gray-100 pt-16 pb-12 mt-20">
        <div class="max-w-5xl mx-auto px-6 flex flex-col md:flex-row justify-between gap-10">
            
            <div class="max-w-xs">
                <div class="font-bold text-lg text-slate-900 flex items-center gap-2 mb-4">
                    <span class="h-6 w-6 bg-blue-700 text-white rounded flex items-center justify-center text-sm font-bold">I</span> Infalex
                </div>
                <p class="text-gray-500 text-sm leading-relaxed">
                    Building software for the future. Practical guides for developers and career growth.
                </p>
            </div>

            <div class="grid grid-cols-2 gap-12 text-sm">
                
                <div class="flex flex-col gap-3">
                    <span class="font-semibold text-slate-900 mb-1">Company</span>
                    <a href="/about" class="text-gray-500 hover:text-black transition">About</a>
                    <a href="/blog" class="text-gray-500 hover:text-black transition">Blog</a>
                    <a href="/contact" class="text-gray-500 hover:text-black transition">Contact</a>
                </div>

                <div class="flex flex-col gap-3">
                    <span class="font-semibold text-slate-900 mb-1">Legal</span>
                    <a href="/privacy" class="text-gray-500 hover:text-black transition">Privacy Policy</a>
                    <a href="/disclaimer" class="text-gray-500 hover:text-black transition">Disclaimer</a>
                </div>
                
            </div>
        </div>

        <div class="max-w-5xl mx-auto px-6 mt-16 pt-8 border-t border-gray-100 flex flex-col md:flex-row justify-between items-center text-xs text-gray-400">
            <p>Â© {new Date().getFullYear()} Infalex. Build for the Future</p>
            <div class="flex gap-4 mt-4 md:mt-0">
                <a href="#" class="hover:text-gray-600">Twitter</a>
                <a href="#" class="hover:text-gray-600">GitHub</a>
            </div>
        </div>
    </footer>

  </body>
</html>