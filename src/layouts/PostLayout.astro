---
import BaseLayout from "./BaseLayout.astro";
const { title, description, date } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="bg-slate-50 border-b border-slate-200 py-16">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <a href="/blog" class="inline-flex items-center text-sm text-slate-500 hover:text-blue-600 mb-8 transition-colors">
        ‚Üê Back to Blog
      </a>
      <h1 class="text-3xl md:text-5xl font-extrabold tracking-tight text-slate-900 leading-tight mb-6">
        {title}
      </h1>
      <div class="flex justify-center items-center gap-4 text-sm text-slate-500">
        <span>Published on {new Date(date).toLocaleDateString('en-US', { dateStyle: 'long' })}</span>
        <span class="w-1 h-1 bg-slate-400 rounded-full"></span>
        <span>By Infalex Team</span>
      </div>
    </div>
  </div>

  <article class="max-w-7xl mx-auto px-6 py-12 grid grid-cols-1 lg:grid-cols-12 gap-12">
    <div class="lg:col-span-8 lg:col-start-3">
        <div class="bg-slate-50 border border-dashed border-slate-300 rounded-lg p-8 text-center text-slate-400 text-sm mb-10">
            Advertisement Slot
        </div>

      <div class="prose prose-lg prose-slate prose-blue max-w-none">
        <slot />
      </div>
      
       <div class="mt-12 bg-slate-50 border border-dashed border-slate-300 rounded-lg p-8 text-center text-slate-400 text-sm">
            Advertisement Slot
        </div>
    </div>
  </article>
</BaseLayout>