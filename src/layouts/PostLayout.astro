---
import BaseLayout from "./BaseLayout.astro";
const { title, description, date } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="max-w-3xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold leading-tight">{title}</h1>

    <p class="text-sm text-slate-500 mt-3">
      Published on {date}
    </p>

    <!-- Ad Slot: Top -->
    <div class="my-8 border border-dashed text-center text-sm text-slate-400 py-6">
      Ad Slot (Top)
    </div>

    <div class="prose prose-slate max-w-none mt-8">
      <slot />
    </div>

    <!-- Ad Slot: Bottom -->
    <div class="my-12 border border-dashed text-center text-sm text-slate-400 py-6">
      Ad Slot (Bottom)
    </div>
  </article>
</BaseLayout>
