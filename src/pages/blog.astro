---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts")).sort(
	(a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf()
);
---

<BaseLayout
  title="Blog â€“ Infalex"
  description="Software and career articles from Infalex."
>
  <div class="bg-slate-50 py-16">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <h1 class="text-4xl font-extrabold text-slate-900 tracking-tight mb-4">Latest Insights</h1>
        <p class="text-lg text-slate-600">Explore our library of guides, tutorials, and industry analysis.</p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <article class="bg-white rounded-2xl border border-slate-200 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-full overflow-hidden group">
            <div class="h-48 bg-slate-100 w-full relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-tr from-blue-50 to-slate-200 group-hover:scale-105 transition-transform duration-500"></div>
            </div>

            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-center gap-3 text-xs font-medium text-slate-500 mb-4">
                <span class="bg-blue-50 text-blue-700 px-2.5 py-1 rounded-full border border-blue-100">Article</span>
                <time datetime={post.data.date}>
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
              </div>

              <a href={`/posts/${post.slug}`} class="block group-hover:text-blue-600 transition-colors">
                <h2 class="text-xl font-bold text-slate-900 mb-3 leading-snug">
                  {post.data.title}
                </h2>
              </a>

              <p class="text-slate-600 text-sm leading-relaxed mb-6 flex-grow line-clamp-3">
                {post.data.description}
              </p>

              <a href={`/posts/${post.slug}`} class="inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-700 mt-auto">
                Read article 
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform">
                  <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>