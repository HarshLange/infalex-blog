---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
---

<BaseLayout
  title="Blog â€“ Infalex"
  description="Software and career articles from Infalex."
>
  <section class="py-16">
    <div class="bg-slate-50 rounded-xl p-8">
      <h1 class="text-4xl font-bold mb-8">Blog</h1>

      <ul class="grid gap-6 md:grid-cols-2 list-none p-0">
        {posts.map((post) => (
          <li class="border rounded-lg p-6 bg-white hover:shadow-md transition">
            <a
              href={`/posts/${post.slug}`}
              class="text-xl font-semibold text-blue-600 hover:underline"
            >
              {post.data.title}
            </a>

            <p class="text-slate-600 mt-2">
              {post.data.description}
            </p>

            <p class="text-xs text-slate-400 mt-4">
              {post.data.date}
            </p>
          </li>
        ))}
      </ul>
    </div>
  </section>
</BaseLayout>
