---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Infalex – Software & Career Guides"
  description="Beginner-friendly software and career guides"
>
  <Header />

  <section style="background:var(--blue-light);padding:80px 0;">
    <div class="container">
      <div class="card">
        <h1 style="font-size:42px;margin-bottom:16px;">
          Practical Software & Career Guides
        </h1>

        <p style="max-width:600px;color:var(--text-muted);font-size:18px;">
          Infalex helps students, job seekers, and professionals understand
          software tools, careers, and the modern internet — in simple English.
        </p>

        <a
          href="/blog"
          style="display:inline-block;margin-top:24px;background:var(--blue);color:white;padding:12px 20px;border-radius:8px;font-weight:600;"
        >
          Read the Blog →
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
